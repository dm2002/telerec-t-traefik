http:
  middlewares:
    https-redirect:
      redirectScheme:
        scheme: https
        permanent: true
    secHeaders:
      headers:
        browserXssFilter: true
        contentTypeNosniff: true
        frameDeny: true
        sslRedirect: true
        stsIncludeSubdomains: true
        stsPreload: true
        stsSeconds: 31536000
        customFrameOptionsValue: "SAMEORIGIN"
        contentSecurityPolicy: "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self'; frame-ancestors 'self'"
        referrerPolicy: "strict-origin-when-cross-origin"
{% if service_cfg.internal_ip_ranges|length >= 1 %}
    internal-ips-only:
      ipAllowList:
        sourceRange:
          {% for range in service_cfg.internal_ip_ranges %}
          - "{{ range }}"
          {% endfor %}
{% endif %}

    hsts-header:
      headers:
        browserXssFilter: true
        contentTypeNosniff: true
        frameDeny: true
        sslRedirect: true
        stsIncludeSubdomains: true
        stsPreload: true
        stsSeconds: 31536000
        customFrameOptionsValue: "SAMEORIGIN"
        contentSecurityPolicy: "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self'; frame-ancestors 'self'"
        referrerPolicy: "strict-origin-when-cross-origin"
    default-headers:
      headers:
        browserXssFilter: true
        contentTypeNosniff: true
        frameDeny: true
        sslRedirect: true
        stsIncludeSubdomains: true
        stsPreload: true
        stsSeconds: 31536000
        customFrameOptionsValue: "SAMEORIGIN"
        contentSecurityPolicy: "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self'; frame-ancestors 'self'"
        referrerPolicy: "strict-origin-when-cross-origin"

    middlewares-compress:
      compress: {}

    middlewares-rate-limit:
      rateLimit:
        average: 100
        burst: 50
        period: "1s"

    # Fail2ban Plugin - Schutz gegen Brute-Force und Scanner
    fail2ban:
      plugin:
        fail2ban:
          enabled: true
          findtime: "3m"               # 3 Minuten Zeitfenster f端r Fehlversuche
          bantime: "3h"                # 3 Stunden Ban-Dauer
          maxretry: 10                 # 10 Fehlversuche erlaubt
          statuscode: "400,401,403-499" # Client-Errors (402 Payment Required ausgenommen)

    # OIDC Middleware f端r JDownloader
    jdownloader-oidc:
      plugin:
        traefikoidc:
          providerURL: "https://auth.riedberg-server.de/realms/riedberg-server"
          clientID: "jdownloaderoauth2"
          clientSecret: "{{ lookup('pipe', './scripts/bws-get.sh dm2002-jdownloader-oauth-client-secret') }}"
          callbackURL: "/oauth2/callback"
          logoutURL: "/oauth2/sign_out"
          sessionEncryptionKey: "{{ lookup('pipe', './scripts/bws-get.sh dm2002-jdownloader-oidc-session-key') }}"
          forceHTTPS: true
          logLevel: "debug"
          scopes:
            - "openid"
            - "profile"
            - "email"
          allowedRolesAndGroups:
            - "jdownloader-user"

    # OIDC Middleware f端r FoundryVTT
    foundry-oidc:
