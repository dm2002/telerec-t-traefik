services:
  traefik:
    image: "traefik:{{ service_cfg.version }}"
    container_name: "{{ service_cfg.name }}"
    restart: always
    security_opt: *base_security_opt
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
    healthcheck:
      test: "traefik healthcheck"
    ports:
      - "25:25"
      - "80:80"
      - "443:443"
      - "465:465"
      - "993:993"
    environment:
      PUID: "{{ PUID }}"
      PGID: "{{ PGID }}"
      TZ: "{{ timezone }}"
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock:rw"
      - "{{ service_cfg.directory }}/traefik.yml:/etc/traefik/traefik.yml:ro"
      - "{{ service_cfg.directory }}/dynamic:/etc/traefik/dynamic"
      - "{{ service_cfg.directory }}/acme.json:/etc/traefik/acme/acme.json:rw"
    labels:
      << : *base_labels
      # Traefik Dashboard wird via OAuth2-Proxy geschÃ¼tzt (traefikauth)
      # HTTP Basic Auth wurde durch OAuth2 ersetzt
    extra_hosts:
      - "host.docker.internal:host-gateway"
    networks: *base_networks
